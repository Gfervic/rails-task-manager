<%= form_for @task do |f| %>
  <%= f.label :name, "Enter a name" %>
  <%= f.text_field :name  %>
  <%= f.label :content, "Enter content" %>
  <%= f.text_field :content  %>
  <%= f.label :priority, "Enter priority" %>
  <%= f.number_field :priority %>
  <%= f.submit %>
<% end %>


